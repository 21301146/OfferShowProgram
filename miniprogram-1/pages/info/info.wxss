/* pages/info/info.wxss */
.sousuo{
  position: fixed;
  background-color: #1e90ff;
  width: 100%;
  height: 80px;
  z-index: 999;
  top:0px;
  align-items: center;
}

input{
  float: left;
  height: 40px;
  width: 60%;
  margin: 5%;
  background-color: white;
  border: 1px solid rgb(22, 20, 20);
  border-radius: 3px;
}

button{
  width: 80px;
  height: 40px;
  font-size: 16px;
  margin: 5%;
}

.info{
  position: relative;
  top:80px;
}

.info_item{
  position: relative;
  display: flex;
  width: 95%;
  border: 1px solid #efefef;
  margin: 2.5%;
  box-shadow: 0.5px 0.5px 7px #dddddd;
}

.msg{
  display: flex;
  flex-direction: column;
  font-size: 12px;
}