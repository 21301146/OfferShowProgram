/* pages/dongtai/dongtai.wxss */
.nav{
  position: relative;
  display: flex;
  flex-wrap: wrap;
  flex-direction:row;
  height:40px;
}

.nav view{
  text-align: center;
  font-size: 14px;
  height: 30px;
  line-height: 30px;
  margin-top: 10px;
}

.selected{
  width: 14%;
  color:#1e90ff;
}

.normal{
  width: 14%;
}

.info{
  position: relative;
}

.info_item{
  position: relative;
  display: flex;
  width: 95%;
  border: 1px solid #efefef;
  margin: 2.5%;
  box-shadow: 0.5px 0.5px 7px #dddddd;
}

.msg{
  display: flex;
  flex-direction: column;
  font-size: 12px;
}